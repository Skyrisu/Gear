<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundv2">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Credits"
        android:id="@+id/CreditsButton"
        android:onClick="openCredits"
        android:longClickable="true"
        android:layout_gravity="center"
        android:background="@drawable/credits"
        android:layout_toRightOf="@+id/HighscoresButton"
        android:layout_alignBottom="@+id/HighscoresButton"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Play"
        android:id="@+id/PlayButton"
        android:onClick="openPlay"
        android:layout_toLeftOf="@+id/HighscoresButton"
        android:background="@drawable/play"
        android:adjustViewBounds="false"
        android:layout_gravity="left|center_vertical"
        android:layout_alignBottom="@+id/HighscoresButton"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Highscores"
        android:id="@+id/HighscoresButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="openHighscores"
        android:background="@drawable/highscores"
        android:layout_gravity="right|center_vertical" />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/NonFunctionGear"
            android:background="@null"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/gear"
            android:layout_marginBottom="-150dp" />
    </FrameLayout>

</RelativeLayout>
