<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundv2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Highscores"
            android:id="@+id/HighscoresButton"
            android:onClick="openHighscores"
            android:background="@drawable/highscoresbutton"
            android:layout_margin="10dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Play"
            android:id="@+id/PlayButton"
            android:onClick="openPlay"
            android:background="@drawable/playbutton"
            android:adjustViewBounds="false"
            android:layout_margin="10dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Credits"
            android:id="@+id/CreditsButton"
            android:longClickable="true"
            android:background="@drawable/moresoonbutton"
            android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/facebookbutton"
            android:background="@drawable/facebook"
            android:onClick="facebook"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/twitterbutton"
            android:background="@drawable/twitter"
            android:onClick="twitter"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/googlebutton"
            android:background="@drawable/googleplus"
            android:onClick="googleplus"
            android:layout_margin="5dp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/settings"
        android:background="@drawable/settings"
        android:onClick="openSettings"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_margin="10dp" />

    <ImageView
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:id="@+id/NonFunctionGear"
        android:background="@null"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/gear"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-150dp"
        android:layout_marginTop="15dp" />

</RelativeLayout>
