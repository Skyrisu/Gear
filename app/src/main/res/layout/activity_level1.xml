<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="gearapp.com.aurora.gears.Level1"
    android:background="@drawable/backgroundv2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Level 1"
        android:id="@+id/Level1Text"
        android:textColor="#fa000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:autoText="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gear1"
        android:src="@drawable/gearlvl"
        android:background="@null"
        android:onClick="turnGear"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:soundEffectsEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Move:"
        android:id="@+id/MoveText"
        android:textIsSelectable="true"
        android:textColor="#fa000000"
        android:layout_alignTop="@+id/Level1Text"
        android:layout_toLeftOf="@+id/TextViewMoveNumber"
        android:layout_toStartOf="@+id/TextViewMoveNumber" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/BackButton"
        android:background="@drawable/menusymbol"
        android:onClick="openLvlSelect"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/Level1Text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ReloadButton"
        android:background="@drawable/refresh"
        android:onClick="reload"
        android:rotation="40"
        android:layout_alignTop="@+id/BackButton"
        android:layout_toRightOf="@+id/BackButton"
        android:layout_toEndOf="@+id/BackButton"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/TextViewMoveNumber"
        android:textColor="#fa000000"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_above="@+id/TextViewBestNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Best:"
        android:id="@+id/BestText"
        android:textIsSelectable="true"
        android:textColor="#fa000000"
        android:layout_below="@+id/MoveText"
        android:layout_alignRight="@+id/MoveText"
        android:layout_alignEnd="@+id/MoveText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/TextViewBestNumber"
        android:textColor="#fa000000"
        android:layout_below="@+id/MoveText"
        android:layout_alignLeft="@+id/TextViewMoveNumber"
        android:layout_alignStart="@+id/TextViewMoveNumber" />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:id="@+id/imageView10"
        android:background="@drawable/tip"
        android:layout_alignTop="@+id/Gear1"
        android:layout_alignLeft="@+id/ReloadButton"
        android:layout_alignStart="@+id/ReloadButton" />


</RelativeLayout>