<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gearapp.sstudio.com.gearapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="gearapp.sstudio.com.gearapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gearapp.sstudio.com.gearapp.Credits"
            android:label="@string/title_activity_credits"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="gearapp.sstudio.com.gearapp.Highscores"
            android:label="@string/title_activity_highscores"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="gearapp.sstudio.com.gearapp.LevelSelect"
            android:label="@string/title_activity_level_select"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="gearapp.sstudio.com.gearapp.Level1"
            android:label="@string/title_activity_level1"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="gearapp.sstudio.com.gearapp.Level2"
            android:label="@string/title_activity_level2"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="gearapp.sstudio.com.gearapp.Level3"
            android:label="@string/title_activity_level3"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="gearapp.sstudio.com.gearapp.EndScreen"
            android:label="@string/title_activity_end_screen"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
        </activity>
    </application>

</manifest>
